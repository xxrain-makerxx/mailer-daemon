<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/fragment_container_detail"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/icon_size_big"
        android:id="@+id/bt_admin"
        android:clickable="true"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/colorAccent"
        >

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="Administration"
          android:textSize="@dimen/text_size_16" />
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/icon_size_big"
        android:layout_margin="4dp"
        android:id="@+id/bt_faculty"
        android:onClick="openContact"
        app:cardBackgroundColor="@color/colorAccent"
        >
        <TextView
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:textSize="@dimen/text_size_16"
          android:layout_height="wrap_content"
          android:text="Faculty" />
      </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/icon_size_big"
        android:id="@+id/bt_senate"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/colorAccent">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Senate  "
          android:textSize="@dimen/text_size_16"
          android:layout_gravity="center"/>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/icon_size_big"
        android:id="@+id/bt_hostel"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/colorAccent"
       >
        <TextView
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:textSize="@dimen/text_size_16"
          android:layout_height="wrap_content"
          android:text="Wardens"/>
      </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/contacts">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:elevation="4dp"
      android:id="@+id/calander"
      android:layout_marginStart="4dp"
      android:layout_marginEnd="4dp"
      android:layout_marginTop="8dp">
      <LinearLayout
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
          android:layout_width="@dimen/icon_size_med"
          android:layout_height="@dimen/icon_size_med"
          android:layout_gravity="center"
          android:background="@drawable/ic_content_paste_black_24dp"
          android:id="@+id/contact_img"/>
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_phone"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:text="     Academic Calander"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


  </LinearLayout>
</FrameLayout>

