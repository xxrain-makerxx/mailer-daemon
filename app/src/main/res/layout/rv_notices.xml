<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  app:cardElevation="2dp"
  app:strokeColor="@color/colorBgLightSilver"
  app:strokeWidth="1dp"
  android:focusable="false"
  android:id="@+id/container"
  android:layout_marginStart="12dp"
  android:layout_marginEnd="12dp"
  android:layout_marginTop="8dp"
  android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
      android:animateLayoutChanges="true"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:textSize="@dimen/text_size_16"
        android:paddingTop="@dimen/padding_8"
        android:textColor="@color/colorTextBlack"
        android:id="@+id/notice_head"
        android:text="No Data"
      android:layout_marginStart="8dp"
        android:paddingHorizontal="@dimen/padding_10"/>

      <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/view"
        android:layout_marginEnd="8dp"
        android:id="@+id/notice_options"
        android:background="@drawable/ic_more_horiz_gray_24dp"/>
      <TextView
        android:layout_width="match_parent"
        android:layout_marginEnd="36dp"
        android:layout_height="wrap_content"
        android:id="@+id/notice_detail"
        android:layout_below="@+id/notice_head"
        android:layout_gravity="bottom"
        android:padding="2dp"
        android:autoLink="web"
        android:layout_marginStart="20dp"
        android:textSize="14sp"
        />
      <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/notice_detail"
        android:background="@color/colorBgLightSilver"
        android:id="@+id/view"
        />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="12sp"
        android:layout_below="@+id/view"
        android:id="@+id/time2"
        android:gravity="end"
        android:visibility="gone"
        android:paddingEnd="@dimen/padding_10"/>

      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/notice_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice_detail"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        app:placeholderImage="@drawable/placeholder_image"
        android:foreground="@drawable/image_mask"
        android:minHeight="240dp"
        app:actualImageScaleType="focusCrop" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="12sp"
        android:padding="@dimen/padding_10"
        android:layout_alignEnd="@+id/notice_photo"
        android:layout_alignBottom="@+id/notice_photo"
        android:id="@+id/time"
        android:textColor="@android:color/white"
        android:paddingEnd="@dimen/padding_10"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
